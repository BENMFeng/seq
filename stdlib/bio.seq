            yield self._slice_direct(i,i+k)
            i += step

    def __iter__(self: pseq):
        return self.split(1, 1)

    def __reversed__(self: pseq):
        i = len(self) - 1
        while i >= 0:
            yield self._slice_direct(i,i+1)
            i -= 1

